{
  "name": "bio-system-simulator",
  "private": true,
  "version": "0.1.0",
  "description": "Interactive atomic-to-cell simulation platform (MVP scaffold).",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*",
    "services/engines/*"
  ],
  "scripts": {
    "clean": "rimraf node_modules */*/node_modules",
    "build": "npm run build --workspaces --if-present",
    "dev": "concurrently \"npm run dev --workspace services/simulation-director\" \"npm run dev --workspace apps/ui\"",
    "lint": "eslint .",
    "test": "npm run test --workspaces --if-present",
    "lint:workspaces": "npm run lint --workspaces --if-present"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "rimraf": "^5.0.5",
    "typescript-eslint": "^8.44.1",
    "tsx": "^4.19.1",
    "concurrently": "^8.2.2"
  }
}
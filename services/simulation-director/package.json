{
  "name": "@bio-sim/simulation-director",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx --watch src/index.ts",
    "start": "node --enable-source-maps dist/index.js",

    "@bio-sim/data-broker": "^0.1.0",
    "@bio-sim/event-bus": "^0.1.0",
    "@bio-sim/event-schemas": "^0.1.0",
    "@bio-sim/physics-engine": "^0.1.0",
    "uuid": "^9.0.1",
    "ws": "^8.15.1",
    "@bio-sim/contracts": "^0.1.0",
    "@bio-sim/orbital-engine": "^0.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/ws": "^8.5.8",
    "typescript": "^5.3.3"
  }
}

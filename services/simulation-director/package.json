    "test": "if ls dist/**/*.test.js >/dev/null 2>&1; then node --test dist/**/*.test.js; else echo 'No tests found for simulation-director'; fi",
    "lint": "eslint \"src/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "@bio-sim/atomic-data": "^0.1.0",
